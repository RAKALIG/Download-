Конечно, вот пример решения данной задачи на языке C#:

using System;
using System.IO;
using System.Linq;

class Program
{
    static void Main()
    {
        // Шаг 1
        Console.Write("Введите число n (<=40): ");
        int n = int.Parse(Console.ReadLine());

        using (StreamWriter f1 = new StreamWriter("f1.txt"))
        {
            for (int i = 2; i <= n; i += 2) // все четные числа <=n
            {
                f1.WriteLine(i);
            }
        }

        // Шаг 2
        using (StreamWriter f2 = new StreamWriter("f2.txt"))
        {
            int count = 0;
            for (int i = 2; count < n; i++)
            {
                if (IsPrime(i))
                {
                    f2.WriteLine(i);
                    count++;
                }
            }
        }

        // Шаг 3
        using (StreamReader sr = new StreamReader("f1.txt"))
        {
            string line;
            int count = 1;
            while ((line = sr.ReadLine()) != null)
            {
                if (count % 2 == 0)
                {
                    Console.WriteLine(line);
                }
                count++;
            }
        }

        // Шаг 4
        using (StreamReader sr = new StreamReader("f2.txt"))
        {
            string line;
            while ((line = sr.ReadLine()) != null)
            {
                if (line.EndsWith("7"))
                {
                    Console.WriteLine(line);
                }
            }
        }
    }


    static bool IsPrime(int number)
    {
        if (number < 2) return false;
        if (number == 2) return true;
        if (number % 2 == 0) return false;
        for (int i = 3; i * i <= number; i += 2)
        {
            if (number % i == 0) return false;
        }
        return true;
    }
}


Этот код выполняет все четыре требования задачи: создает файлы, записывает и считывает из них числа и выполняет соответствующие условия.
