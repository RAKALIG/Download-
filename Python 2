```python
import random
def initialize_array(n, m):
"""
Инициализирует двумерный массив размером n x m случайными числами.
Возвращает инициализированный массив.
"""
array = []
for i in range(n):
    row = []
    for j in range(m):
        row.append(random.randint(1, 100))  # случайное число от 1 до 100
    array.append(row)
return array
def calculate_average(array):
"""
Вычисляет среднее арифметическое четных элементов двумерного массива.
Возвращает среднее арифметическое и флаг, указывающий на наличие четных элементов.
"""
count = 0
total = 0
for row in array:
    for element in row:
        if element % 2 == 0:
            total += element
            count += 1
if count > 0:
    average = total / count
    return average, True
else:
    return 0, False
def find_max_elements(array):
"""
Находит максимальный элемент среди элементов кратных 3,
которые находятся в четных строках и нечетных столбцах двумерного массива.
Выводит на экран все элементы массива больше найденного максимального и их индексы.
"""
max_element = float('-inf')
for i in range(len(array)):
    if i % 2 == 0:
        for j in range(len(array[i])):
            if j % 2 != 0:
                element = array[i][j]
                if element % 3 == 0 and element > max_element:
                    max_element = element

if max_element != float('-inf'):
    print(f"Максимальный элемент, кратный 3: {max_element}")
    print("Элементы массива больше максимального и их индексы:")
    for i in range(len(array)):
        if i % 2 == 0:
            for j in range(len(array[i])):
                if j % 2 != 0 and array[i][j] > max_element:
                    print(f"Элемент: {array[i][j]}, Индексы: ({i}, {j})")
else:
    print("В массиве нет элементов, удовлетворяющих условию.")
# Точка входа в программу
def main():
array = []
while True:
    print("Меню:")
    print("1. Вывести массив на экран")
    print("2. Редактировать элемент массива")
    print("3. Вычислить среднее арифметическое четных элементов массива")
    print("4. Найти и вывести элементы массива, удовлетворяющие условию")
    print("5. Инициализировать новый массив")
    print("6. Выйти из программы")

    choice = input("Выберите пункт меню: ")

    if choice == "1":
        if len(array) > 0:
            print("Массив:")
            for row in array:
                print(row)
            print()
        else:
            print("Массив пуст.\n")
    elif choice == "2":
        if len(array) > 0:
            i = int(input("Введите номер строки: "))
            j = int(input("Введите номер столбца: "))
            if 0 <= i < len(array) and 0 <= j < len(array[0]):
                new_value = int(input("Введите новое значение элемента: "))
                if new_value >= 0:
                    array[i][j] = new_value
                    print("Элемент успешно изменен.\n")
                else:
                    print("Ошибка! Новое значение элемента должно быть неотрицательным.\n")
            else:
                print("Ошибка! Введенные индексы выходят за пределы массива.\n")
        else:
            print("Массив пуст. Сперва инициализируйте массив.\n")
    elif
