Конечно, вот пример реализации на C#:
using System;
using System.Collections.Generic;

namespace IntegerArrayOperations
{
    class Program
    {
        static List<int> integerList = new List<int>() { 2, 4, 1, 8, 0 };

        static void Main(string[] args)
        {
            Console.WriteLine("Исходный массив:");
            PrintArray();

            int choice;
            do
            {
                Console.WriteLine("Выберите операцию (1 - добавление, 2 - удаление, 3 - вставка, 4 - изменение, -1 - завершение): ");
                choice = Convert.ToInt32(Console.ReadLine());

                switch (choice)
                {
                    case 1:
                        Console.WriteLine("Введите число для добавления в конец: ");
                        int numberToAdd = Convert.ToInt32(Console.ReadLine());
                        integerList.Add(numberToAdd);
                        PrintArray();
                        break;
                    case 2:
                        Console.WriteLine("Введите номер элемента для удаления: ");
                        int indexToRemove = Convert.ToInt32(Console.ReadLine());
                        integerList.RemoveAt(indexToRemove);
                        PrintArray();
                        break;
                    case 3:
                        Console.WriteLine("Введите номер элемента для вставки: ");
                        int indexToInsert = Convert.ToInt32(Console.ReadLine());
                        Console.WriteLine("Введите число для вставки: ");
                        int numberToInsert = Convert.ToInt32(Console.ReadLine());
                        integerList.Insert(indexToInsert, numberToInsert);
                        PrintArray();
                        break;
                    case 4:
                        Console.WriteLine("Введите номер элемента для изменения: ");
                        int indexToChange = Convert.ToInt32(Console.ReadLine());
                        Console.WriteLine("Введите новое число: ");
                        int newNumber = Convert.ToInt32(Console.ReadLine());
                        integerList[indexToChange] = newNumber;
                        PrintArray();
                        break;
                    default:
                        break;
                }
            } while (choice != -1);
        }

        static void PrintArray()
        {
            foreach (var number in integerList)
            {
                Console.Write(number + " ");
            }
            Console.WriteLine();
        }
    }
}
